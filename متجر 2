    <script>
        // بيانات المنتجات منظمة حسب الأقسام
        const productsData = {
            computers: [
                { name: 'MacBook Pro 2024', price: '25,000 جنيه', img: 'https://source.unsplash.com/featured/?macbook' },
                { name: 'Dell XPS 15', price: '20,000 جنيه', img: 'https://source.unsplash.com/featured/?laptop' }
            ],
            phones: [
                { name: 'iPhone 15 Pro Max', price: '45,000 جنيه', img: 'https://source.unsplash.com/featured/?iphone' },
                { name: 'Samsung Galaxy S24', price: '30,000 جنيه', img: 'https://source.unsplash.com/featured/?samsung-phone' }
            ],
            tv: [
                { name: 'LG OLED 65"', price: '32,000 جنيه', img: 'https://source.unsplash.com/featured/?oled-tv' },
                { name: 'Samsung QLED 55"', price: '28,000 جنيه', img: 'https://source.unsplash.com/featured/?qled-tv' }
            ],
            accessories: [
                { name: 'سماعة HyperX Cloud II', price: '2,200 جنيه', img: 'https://source.unsplash.com/featured/?gaming-headset' },
                { name: 'ماوس Logitech MX', price: '800 جنيه', img: 'https://source.unsplash.com/featured/?mouse' }
            ],
            gaming: [
                { name: 'PlayStation 5', price: '15,000 جنيه', img: 'https://source.unsplash.com/featured/?playstation' },
                { name: 'Xbox Series X', price: '14,000 جنيه', img: 'https://source.unsplash.com/featured/?xbox' }
            ]
        };

        const productsContainer = document.getElementById('products');

        // وظيفة عرض المنتجات على حسب القسم
        function showProducts(category) {
            const products = productsData[category] || [];
            productsContainer.innerHTML = '';

            if (products.length === 0) {
                productsContainer.innerHTML = '<p style="color:#ccc; font-size:1.5em; text-align:center;">لا توجد منتجات في هذا القسم.</p>';
                return;
            }

            products.forEach(product => {
                const productHTML = `
              <div class="product">
                <img src="${product.img}" alt="${product.name}" />
                <div class="product-details">
                  <h3>${product.name}</h3>
                  <p>${product.price}</p>
                  <button>أضف إلى السلة</button>
                </div>
              </div>
            `;
                productsContainer.insertAdjacentHTML('beforeend', productHTML);
            });
        }

        // عرض منتجات جميع الأقسام أول مرة
        function showAllProducts() {
            productsContainer.innerHTML = '';
            Object.keys(productsData).forEach(category => {
                productsData[category].forEach(product => {
                    const productHTML = `
                <div class="product">
                  <img src="${product.img}" alt="${product.name}" />
                  <div class="product-details">
                    <h3>${product.name}</h3>
                    <p>${product.price}</p>
                    <button>أضف إلى السلة</button>
                  </div>
                </div>
              `;
                    productsContainer.insertAdjacentHTML('beforeend', productHTML);
                });
            });
        }

        // نعرض كل المنتجات في البداية
        showAllProducts();

        // إضافة مستمع أحداث على روابط القائمة
        const categoryLinks = document.querySelectorAll('.dropdown-content a');
        categoryLinks.forEach(link => {
            link.addEventListener('click', e => {
                e.preventDefault();
                const category = link.getAttribute('data-category');
                showProducts(category);
            });
        });
    </script>
</body>
